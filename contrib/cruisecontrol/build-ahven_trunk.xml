<?xml version="1.0" encoding="UTF-8" ?>
<project name="ahven" default="test" basedir="checkout/ahven_trunk">
	<description>Ahven</description>
	<target name="build">
		<exec executable="/usr/bin/make">
			<arg value="build_all"/>
		</exec>
	</target>

	<target name="test" depends="build">
		<exec executable="/usr/bin/make" failonerror="false">
			<arg value="check_xml"/>
		</exec>
	</target>

	<target name="report" depends="test">
	  <mkdir dir="results/html"/>
	  <junitreport todir="results">
		<fileset dir="results">
	    		<include name="TEST-*.xml"/>
		</fileset>
		<report todir="results/html"/>
	  </junitreport>
	</target>
</project>
